{
  "name": "eb-scripts",
  "description": "A CLI and scripts used at Echobind",
  "version": "1.0.0",
  "author": "Joe Previte @jsjoeio",
  "bin": {
    "eb-scripts": "./bin/run"
  },
  "bugs": "https://github.com/echobind/eb-scripts/issues",
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2",
    "hygen": "^5.0.1",
    "tslib": "^1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1",
    "@semantic-release/commit-analyzer": "^6.3.2",
    "@semantic-release/git": "^7.0.17",
    "@semantic-release/npm": "^5.3.2",
    "@types/fs-extra": "^8.0.1",
    "@semantic-release/release-notes-generator": "^7.3.2",
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.3",
    "fs-extra": "^8.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-echobind": "^0.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "globby": "^10",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "pretty-quick": "^2.0.0",
    "semantic-release": "^15.13.28",
    "ts-jest": "^24.1.0",
    "ts-node": "^8",
    "typescript": "^3.6.4"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/echobind/eb-scripts",
  "keywords": [
    "oclif"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "eb-scripts",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "echobind/eb-scripts",
  "scripts": {
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "jest --runInBand",
    "version": "oclif-dev readme && git add README.md",
    "gen": "hygen",
    "semantic-release": "semantic-release"
  },
  "types": "lib/index.d.ts",
  "release": {
    "plugins": [
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "angular",
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ]
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/lib/",
      "<rootDir>/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
